<%= paginate @users %>

<% if @users.count != 0 %>
  <% @users.each do |user| %>
      <h2>Name: <%= user.firstname %>, <%= user.lastname %> </h2>
      <p>email: <%= user.email %></p>
      <p><%= link_to "edit", edit_admin_user_path(user.id) %>, <%= link_to "delete", admin_user_path(user), method: :delete, confirm: "You sure?" %></p>
  <% end %>
<% end %>